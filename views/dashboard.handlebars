{{#each posts as |post| }}
<div class="row mb-4 post-list">
    <article class="post">
        <div class="title">
            <a href="/post/{{id}}">{{title}}</a>
        </div>
        <div class="description">
            {{description}}
        </div>
        <div class="user-info">
            <p>Post by {{user.name}} on {{format_date created_at}}</p>
        </div>
        <div>
            <a href="/dashboard/editPost/{{id}}" class="edit">EDIT</a>
        </div>
    </article>

    <div>
        <button type="submit"><a href="/dashboard/newPost" class="create-btn">Create a new POST</a></button>
    </div>
</div>
{{/each}}