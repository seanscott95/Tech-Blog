<div class="row mb-4 post-list">
    <article class="post">
        <div class="title">
            <a href="/posts/{{id}}">{{title}}</a>
        </div>
        <div class="description">
            {{description}}
        </div>
        <div class="user-info">
            <p>Post by {{user.name}} on {{format_date date_created}} </p>
        </div>
        <div class="container container-fluid mt-5 post-comments">
            {{#each comments as |comment|}}
            <div class="row mb-4 comment-list">
                <article class="comment">
                    <div class="description">
                        {{description}}
                    </div>
                    <div class="user-info">
                        <p>Comment by {{user.name}} on {{format_date date_created}} </p>
                    </div>
                    <div class="form-group">
                        <a href="/dashboard/editComment/{{id}}" class="edit">EDIT</a>
                        <button class="btn btn-danger" id="delete-comment" data-id="{{comment.id}}"
                            type="button">Delete Comment</button>
                    </div>
                </article>
            </div>
            {{/each}}
        </div>
    </article>

    <form class="form new-comment-form">
        <div class="form-group">
            <textarea class="comment-input" name="comment-input"></textarea>
            <button type="submit" class="btn btn-primary">Add Comment</button>
        </div>
    </form>
</div>

<script src="/js/comment.js"></script>