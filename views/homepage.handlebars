{{#each posts as |post| }}
<div class="row mb-4 post-list">
    <article class="post">
        <div class="title">
            <a href="/posts/{{id}}">{{title}}</a>
        </div>
        <div class="description">
            {{description}}
        </div>
        <div class="user-info">
            <p>Post by {{user.name}} on {{format_date date_created}} </p>
        </div>
    </article>
</div>
{{/each}}