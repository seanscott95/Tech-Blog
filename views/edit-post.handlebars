<div class="row mb-4 edit-post">
    <h2 class="text-info">Edit post!</h2>
    <form class="form edit-form text-info">
        <div class="form-group">
            <label for="title-input">Title:</label>
            <input class="form-input form-control my-2" type="text" id="title-input" value="{{post.title}}" />
        </div>
        <div class="form-group mb-3 text-info">
            <label for="description-input">Description:</label>
            <textarea class="form-input form-control my-2" id="description-input" name="description-input" rows="5">{{post.description}}</textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" id="update-post" type="submit">Save Post</button>
            <button class="btn btn-danger" id="delete-post" data-id="{{post.id}}" type="button">Delete Post</button>
        </div>
    </form>
</div>

<script src="/js/edit-post.js"></script>