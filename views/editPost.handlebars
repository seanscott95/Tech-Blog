<div class="row mb-4 edit-post">
    <h2>Edit post!</h2>
    <form class="form edit-form">
        <div class="form-group">
            <label for="title-input">Title:</label>
            <input class="form-input" type="text" id="title-input" value="{{post.title}}" />
        </div>
        <div class="form-group">
            <label for="description-input">Description:</label>
            <input class="form-input" type="text" id="description-input" value="{{post.description}}"/>
        </div>
        <div class="form-group">
            <button class="btn btn-primary" type="submit">Save Post</button>
            <button class="btn btn-danger delete-post" data-id="{{post.id}}" type="button">Delete Post</button>
        </div>
    </form>
</div>

<script src="/js/edit-post.js"></script>